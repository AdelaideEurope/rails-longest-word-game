<div class="container">
  <h1>New game</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
      <p id="card-letter"><%= letter %></p>
    <% end %>
  </div>
<div class="form-bottom">
  <div class="form-group">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag "letters_list", "#{@letters}" %>
      <p>What is the longest word you can find?<p>
      <input type="text" name="word" id= "form-input">
      <input type="submit" value="Play" id="button">
    </form>
  </div>
</div>
</div>
